<%#= form_with scope: :article , url: articles_path , local: true do |form| %>

<h1 align="center">Sign up for Article</h1>


<%= render "shared/errors", obj: @user %>

<div class= "row">
  <div class="col-md-12">
<%#= form_for  @article, local: true do |form| %>
    <%= form_with(model:@user ,local: true, :html => {class: "form-horizontal", role: "form"})  do |form| %>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :username %><br>
        </div>
        <div class="col-sm-10">
          <%= form.text_field :username ,class: "form-control", placeholder: "Username"%>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :password %><br>
        </div>
        <div class="col-sm-10">
          <%= form.password_field :password ,class: "form-control", placeholder: "Password"%>
        </div>
      </div>


      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :email %><br>
        </div>
        <div class="col-sm-10">
          <%= form.email_field :email  ,class: "form-control", placeholder: "Email"%>
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit "Sign up", class: "btn btn-primary btn-lg" %>
        </div>
      </div>

      <div class=" col-xs-4 col-xs-offset-4">
        [ <%= link_to "Back",articles_path %> ]
      </div>


    <% end %>
  </div>
</div>