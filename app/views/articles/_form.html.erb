<%#= form_with(model:@article ,local: true)  do |form| %>
<%#= form_with scope: :article , url: articles_path , local: true do |form| %>

<%= render "shared/errors", obj: @article %>

  <div class= "row">
  <div class="col-md-12">
<%#= form_for  @article, local: true do |form| %>
    <%= form_with(model:@article ,local: true, :html => {class: "form-horizontal", role: "form"})  do |form| %>

  <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :title %><br>
      </div>
      <div class="col-sm-10">
        <%= form.text_field :title ,class: "form-control", placeholder: "title of article"%>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :text %><br>
      </div>
      <div class="col-sm-10">
        <%= form.text_area :text , rows:10 ,class: "form-control", placeholder: "description of article"%>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= form.submit  class: "btn btn-primary btn-lg" %>
      </div>
    </div>

    <div class=" col-xs-4 col-xs-offset-4">
    [ <%= link_to "Back",articles_path %> ]
    </div>


<% end %>
</div>
</div>